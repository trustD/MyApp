<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guiding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="baoqi.com.myapp.Activity.Guiding">

    <Button
        android:id="@+id/start"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="400dp"
        android:background="@drawable/start"
        android:text="开始体验"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        />


    <android.support.v4.view.ViewPager
        android:id="@+id/page_guiding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:id="@+id/points1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/start"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/guid_image1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/presence_invisible"
            />
        <ImageView
            android:id="@+id/guid_image2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/presence_invisible"
            />
        <ImageView
            android:id="@+id/guid_image3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/presence_invisible"
            />
        <ImageView
            android:id="@+id/guid_image4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/presence_invisible"
            />

    </LinearLayout>


</RelativeLayout>
